<h1>Edit Book</h1>

<%= form_for(@book) do |f| %>
	<ul>
		<% @book.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :notes %><br />
		<%= f.text_area :notes %><br />
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>